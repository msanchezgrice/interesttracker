{
  "manifest_version": 3,
  "name": "MakerPulse (Manager â†’ Maker)",
  "version": "0.2.0",
  "description": "Track engaged time by URL and send to MakerPulse backend.",
  "permissions": ["tabs", "storage", "idle", "sidePanel", "webNavigation", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "src/background.ts", "type": "module" },
  "action": { "default_title": "MakerPulse" },
  "side_panel": { "default_path": "sidepanel.html" },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*", "*://*.github.com/*", "*://*.substack.com/*", "*://*.news.ycombinator.com/*"],
      "js": ["src/content.ts"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "icons": { "128": "icon128.png" }
}


